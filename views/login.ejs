<!DOCTYPE html>
 <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.0/css/materialize.css">
<!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>

  <!-- Compiled and minified JavaScript -->
<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.0/js/materialize.js"></script>


<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/login.css' />
  </head>
  <body>

      <div class="row">
          <!-- up arrow key, not set to scroll yet -->
        <i class="mdi-hardware-keyboard-arrow-up medium center-align col s12"></i>
      </div>
    <div class="container">
        <h4 class="col s12">Register</h4>

        <!-- register -->
        <div class="row section">
        <form class="col s12">
          <div class="row section">
            <div class="input-field col s12 l6">
                <i class="prefix"></i>
              <input id="reg_firstname" type="text" class="validate">
              <label for="reg_firstname">First Name</label>
            </div>
            <div class="input-field col s12 l6">
                <i class="prefix"></i>
              <input id="reg_lastname" type="text" class="validate">
              <label for="reg_lastname">Last Name</label>
            </div>
            <div class="input-field col s12 l8">
              <i class="mdi-communication-email prefix"></i>
              <input id="reg_email" type="email" class="validate">
              <label for="reg_email">Email</label>
            </div>

              <div class="input-field col s12 l8">
              <i class="mdi-action-lock prefix"></i>
              <input id="reg_password" type="password" class="validate" length="25">
              <label for="reg_password">Password</label>
            </div>

              <div class="input-field col s12 l8">
              <i class="prefix"></i>
              <input id="confirm_password" type="password" class="validate" length="25">
              <label for="confirm_password">Confirm Password</label>
            </div>

            <button class="btn waves-effect waves-light col s6 l2 right"                            type="submit" name="action">Register
                <i class="mdi-content-send right"></i>
            </button>
          </div>



        </form>
        </div> <!-- row -->

    </div> <!-- container -->

  </body>
</html>
