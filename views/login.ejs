
    <link rel='stylesheet' href='/stylesheets/login.css' />


    <div class="container">
        <h1 class="col s12">Register</h1>

        <!-- register -->
        <div class="row section">
        <form class="col s12" method="POST" action="/signup">
          <div class="row section">
            <div class="input-field col s12 l6">
                <i class="prefix"></i>
              <input id="reg_firstname" name="firstName" type="text" class="validate">
              <label for="reg_firstname">First Name</label>
            </div>
            <div class="input-field col s12 l6">
                <i class="prefix"></i>
              <input id="reg_lastname" name="lastName" type="text" class="validate">
              <label for="reg_lastname">Last Name</label>
            </div>
            <div class="input-field col s12 l8">
              <i class="mdi-communication-email prefix"></i>
              <input id="reg_email" name="email" type="email" class="validate">
              <label for="reg_email">Email</label>
            </div>

              <div class="input-field col s12 l8">
              <i class="mdi-action-lock prefix"></i>
              <input id="reg_password" name="password" type="password" class="validate" length="25">
              <label for="reg_password">Password</label>
            </div>

              <div class="input-field col s12 l8">
              <i class="prefix"></i>
              <input id="confirm_password" name="confirm" type="password" class="validate" length="25">
              <label for="confirm_password">Confirm Password</label>
            </div>

            <button class="btn waves-effect waves-light col s6 l2 right" type="submit" name="action">Register
                <i class="mdi-content-send right"></i>
            </button>
          </div>



        </form>
        </div> <!-- row -->

    </div> <!-- container -->
